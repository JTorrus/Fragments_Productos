<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/image_of_item"
        android:layout_width="@dimen/size_of_image_item"
        android:layout_height="@dimen/size_of_image_item" />

    <TextView
        android:id="@+id/name_of_item"
        android:layout_toEndOf="@id/image_of_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/stock_of_item"
        android:layout_below="@id/name_of_item"
        android:layout_toEndOf="@id/image_of_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/qty_to_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:prompt="@string/title_of_spinner"
        android:spinnerMode="dialog"
        android:layout_below="@id/name_of_item"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>